{
  "name": "@colonial-collections/api",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": "18.x"
  },
  "main": "src/index.ts",
  "types": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "lint": "gts check",
    "test": "jest --testPathIgnorePatterns '<rootDir>/src/.*/*.integration.test.ts'",
    "test:ci": "npm test -- --ci",
    "test:watch": "npm test -- --watchAll",
    "test:integration": "jest --testMatch '**/src/**/*.integration.test.ts'",
    "test:integration:watch": "npm run test:integration -- --watchAll"
  },
  "dependencies": {
    "@colonial-collections/iris": "*",
    "defu": "6.1.4",
    "edtf": "4.6.0",
    "fetch-sparql-endpoint": "4.1.0",
    "rdf-object": "1.14.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@colonial-collections/eslint-config": "*",
    "@colonial-collections/ts-config": "*",
    "@jest/globals": "29.7.0",
    "@rdfjs/types": "1.1.0",
    "@types/n3": "1.16.4",
    "@types/node": "20.11.28",
    "@types/streamify-string": "1.0.4",
    "gts": "5.3.0",
    "jest": "29.7.0",
    "n3": "1.17.2",
    "streamify-string": "1.0.1",
    "typescript": "5.4.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testTimeout": 60000,
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ]
  }
}
