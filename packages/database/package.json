    "eslint-config-custom": "*",
    "tsconfig": "*"
  },
  "dependencies": {
    "drizzle-kit": "0.19.13",
    "drizzle-orm": "0.28.5",
    "drizzle-zod": "0.5.1",
    "mysql2": "3.6.0"
